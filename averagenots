ad= input("isim giriniz")
soyad = input("soyad giriniz:")
not1 = input("not1 girin")
not2= input("not2 girin")
ortnot = (float(not1) + float(not2)) / 2
ortnot = float(ortnot)
print(ortnot)
msj = f"{ad} {soyad} isimli öğrencinin 1.notu {not1} 2.notu{not2} ve not ortalaması {ortnot} olarak hesaplanmıştır." 
print(msj)
